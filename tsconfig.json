{
  "compilerOptions": {
    "target": "ES2020",                           
    "module": "CommonJS",                      
    "strict": true,     
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/@types"
  }
}